@@ -16,7 +16,7 @@ if(KF5Attica_FOUND AND KF5NewStuff_FOUND)
     add_subdirectory(KNSBackend)
 endif()
 
-if(QApt_FOUND)
+if(QApt_FOUND AND AppstreamQt_FOUND)
     add_subdirectory(ApplicationBackend)
 endif()
 
