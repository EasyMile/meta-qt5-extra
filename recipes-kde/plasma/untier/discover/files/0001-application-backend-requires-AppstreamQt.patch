diff --git a/CMakeLists.txt b/CMakeLists.txt
index e0fbca9..dec206e 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -73,7 +73,7 @@ set_package_properties(AkabeiClient PROPERTIES
